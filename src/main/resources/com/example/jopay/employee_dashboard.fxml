        <ComboBox fx:id="comboBoxMonth" layoutX="64.0" layoutY="253.0" onAction="#handleMonthSelection" prefHeight="64.0" prefWidth="251.0" promptText="Select Month" />

        <!-- Download button (initially hidden) -->
        <Button fx:id="btnDownload" layoutX="340.0" layoutY="253.0" onAction="#handleDownloadPayslip" prefHeight="64.0" prefWidth="180.0" styleClass="download-button" text="Download PDF" visible="false">
